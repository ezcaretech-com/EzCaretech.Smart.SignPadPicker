    <Style x:Key="IconCloseKey" TargetType="Path">
        <Setter Property="Data" Value="{StaticResource DeleteGeometry}"/>
        <Setter Property="Fill" Value="{StaticResource IconNormalBackground}"/>
    </Style>
    <Style x:Key="IconSaveKey" TargetType="Path">
        <Setter Property="Data" Value="{StaticResource SaveGeometry}"/>
        <Setter Property="Fill" Value="{StaticResource IconNormalBackground}"/>
    </Style>
    <Style x:Key="IconSignatureKey" TargetType="Path">
        <Setter Property="Data" Value="{StaticResource SignatureGeometry}"/>
        <Setter Property="Fill" Value="{StaticResource IconNormalBackground}"/>
    </Style>
    <Style x:Key="IconWastebasketKey" TargetType="Path">
        <Setter Property="Data" Value="{StaticResource WastebasketGeometry}"/>
        <Setter Property="Fill" Value="{StaticResource IconNormalBackground}"/>
    </Style>

    <Style x:Key="CloseButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="MinHeight" Value="24" />
        <Setter Property="Height" Value="24" />
        <Setter Property="MinWidth" Value="80" />
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFad672e" Offset="0"/>
                    <GradientStop Color="#FF773b19" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Path Style="{StaticResource IconCloseKey}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,1,0,0"/>
                        <TextBlock Text="{Binding}" Foreground="White" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="DeleteButtonStyle" TargetType="{x:Type Button}">
